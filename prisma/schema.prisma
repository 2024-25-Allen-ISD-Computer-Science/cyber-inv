generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(nanoid(13))
  email    String @unique
  password String

  firstName String
  lastName  String
  grade     Grade

  team Team @relation(fields: [teamId], references: [id])

  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  teamId    String
}

model PointHistory {
  id     String @id @default(nanoid(13))
  minute Int
  score  Int
  Team   Team   @relation(fields: [teamId], references: [id])
  teamId String
}

model Team {
  id    String @id @default(nanoid(13))
  users User[]

  puzzlePoints   Int            @default(0)
  battlePoints   Int            @default(0)
  scenarioPoints Int            @default(0)
  pointHistory   PointHistory[]
}

enum Grade {
  Ninth
  Tenth
  Eleventh
  Twelvth
}
